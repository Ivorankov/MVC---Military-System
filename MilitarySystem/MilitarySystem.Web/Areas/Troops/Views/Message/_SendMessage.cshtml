@model MilitarySystem.Web.Areas.Troops.ViewModels.MessageIndexViewModel
@{

}


@Html.AntiForgeryToken()
<div class="row ui-widget-content" id="message-details-box">
    <div class="col s12 m12">
        <div class="card grey lighten-5 center-align black-text human-text floating-box">
            <br />
            <strong class="blue-text">@ViewBag.HeaderText</strong>
            @using (Html.BeginForm("SendMessage", "Message", new { Area = "Troops" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="floating-box">
                    @Html.LabelFor(m => m.SendInput.Content)
                    @Html.TextAreaFor(m => m.SendInput.Content, new { @cols = "80", @rows = "10", @class = "text-area-messanger" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn waves-effect waves-light blue" value="Send" />
                    </div>
                </div>
            }
            <strong>Recived messages</strong>
            <div id="message-grid">
                @foreach(var a in Model.MessageView.Content)
                {
                    <span>@a.Content : <strong>@a.User.FirstName</strong></span>
                    <hr/>
                }
            </div>
        </div>
    </div>
</div>
