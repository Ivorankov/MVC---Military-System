@model MilitarySystem.Web.Models.SendMessageViewModel
@{ 
    
}
           
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />

    <div class="row ui-widget-content" id="message-details-box">
        <div class="col s12 m12">
            <div class="card grey lighten-5 center-align black-text human-text floating-box">
                <strong class="blue-text">@ViewBag.HeaderText</strong>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="floating-box">
                    @Html.LabelFor(m => m.Content)
                        @Html.TextAreaFor(m => m.Content, new { @cols = "80" , @rows = "10" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn waves-effect waves-light blue" value="Send" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
